{{> header}}
{{> navbar}}
<section id="active-tests">
    <div class="container">
            {{#hasActiveTest}}
                <hr class="my-4">
                <p class="test-title">Live Mock Tests</p>
                <hr class="my-4">
                <div class="row padding">
                    {{#activeTests}}
                        <!--        <h4 id="liveTest">Live Tests</h4>-->
                        <div class="col-auto">
                            <div class="card mb-1" style="min-width: 18rem; max-width: 18rem;">
                                <img class="card-img-top" src="/assets/images/ssc.jpg" alt="SSC">
                                <div class="card-body text-center">

                                    <h5 class="card-title">{{name}}</h5>
                                    <p class="card-text">ENDS IN:
                                    <div data-countdown="{{endTime}}"></div>
                                    </p>
                                    <a href="/test/{{id}}" class="btn btn-primary btn-success">Start Now</a>
                                </div>
                            </div>
                        </div>
                    {{/activeTests}}
                </div>
            {{/hasActiveTest}}

            {{#hasUpcomingTest}}
                <hr class="my-4">
                <p class="test-title">Upcoming Mock Tests</p>
                <hr class="my-4">
                <div class="row padding">
                    {{#upcomingTests}}
                        <div class="col-auto">
                            <div class="card mb-4" style="min-width: 18rem; max-width: 18rem;">
                                <img class="card-img-top" src="/assets/images/ssc.jpg" alt="SSC">
                                <div class="card-body text-center">
                                    <h5 class="card-title">{{name}}</h5>
                                    <p class="card-text">Starts At: {{startTime}}</p>
                                    <a href="#" class="btn btn-primary">Register</a>
                                </div>
                            </div>
                        </div>
                    {{/upcomingTests}}
                </div>
            {{/hasUpcomingTest}}
    </div>
</section>
{{> footer}}